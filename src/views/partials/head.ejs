<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>FitApp Pro</title>
<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
<script src="https://unpkg.com/@phosphor-icons/web"></script>

<style>
    :root {
        --bg-body: #09090b;
        --bg-card: #18181b;
        --border-subtle: rgba(255, 255, 255, 0.08);
        --text-main: #f4f4f5;
        --text-secondary: #a1a1aa;
        --text-tertiary: #71717a;
        --accent: #3b82f6;
        --radius-lg: 16px;
    }

    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        background-color: var(--bg-body);
        color: var(--text-main);
        font-family: 'Inter', sans-serif;
        display: flex;
        flex-direction: column;
        min-height: 100vh;
    }

    .main-container {
        flex: 1;
        /* Empuja el footer hacia abajo */
        width: 100%;
        max-width: 1200px;
        margin: 0 auto;
        padding: 32px 24px;
    }

    /* --- Header Estilo Premium --- */
    .app-header {
        border-bottom: 1px solid var(--border-subtle);
        padding: 20px 24px;
        background: rgba(9, 9, 11, 0.8);
        backdrop-filter: blur(10px);
        position: sticky;
        top: 0;
        z-index: 1000;
    }

    .header-content {
        max-width: 1200px;
        margin: 0 auto;
        display: flex;
        justify-content: space-between;
        align-items: center;
        overflow: visible;
    }

    .logo {
        font-weight: 700;
        font-size: 1.2rem;
        color: var(--text-main);
        text-decoration: none;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .logo span {
        color: var(--accent);
    }

    /* --- Footer Basico --- */
    .app-footer {
        padding: 40px 24px;
        border-top: 1px solid var(--border-subtle);
        text-align: center;
        margin-top: auto;
    }

    .footer-text {
        font-size: 0.85rem;
        color: var(--text-tertiary);
    }

    /* Avatar */
    .user-avatar {
        cursor: pointer;
        font-size: 1.6rem;
        color: var(--text-main);
        display: flex;
        align-items: center;
        justify-content: center;
        width: 40px;
        height: 40px;
        border-radius: 50%;
        transition: background 0.2s;
    }

    .user-avatar:hover {
        background: rgba(255, 255, 255, 0.1);
    }

    /* MenÃº desplegable */
    .user-menu {
        position: absolute;
        top: 55px;
        /* Ajustado para que no tape el header */
        right: 0;
        background: var(--bg-card);
        border: 1px solid var(--border-subtle);
        border-radius: var(--radius-lg);
        padding: 16px;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.5);
        display: none;
        /* Se controla con JS */
        min-width: 220px;
        z-index: 1100;
    }

    .user-menu p {
        margin: 6px 0;
        font-size: 0.9rem;
        color: var(--text-secondary);
    }

    .user-menu.show {
        display: block;
        animation: fadeIn 0.2s ease-out;
    }

    .user-name {
        font-weight: 600;
        color: var(--text-main);
    }

    .logout-btn {
        margin-top: 12px;
        width: 100%;
        padding: 8px;
        background: var(--accent);
        color: #fff;
        border: none;
        border-radius: 8px;
        font-weight: 500;
        cursor: pointer;
        transition: background 0.2s ease;
    }

    .logout-btn:hover {
        background: #2563eb;
        /* tono mÃ¡s oscuro */
    }

    .user-menu {
        position: absolute;
        top: 55px;
        right: 0;
        background: var(--bg-card);
        border: 1px solid var(--border-subtle);
        border-radius: var(--radius-lg);
        padding: 16px;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.5);
        display: none;
        min-width: 220px;
        z-index: 2000;
        /* ðŸ‘ˆ mÃ¡s alto que el header */
    }

    @keyframes fadeIn {
        from {
            opacity: 0;
            transform: translateY(-10px);
        }

        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>