<link rel="stylesheet" href="/stylesheet/style.home.css">
<script src="https://cdn.jsdelivr.net/npm/chart.js@4.5.1/dist/chart.umd.min.js"></script>

</head>

<body>

  <header class="app-headers">
    <div class="user-greeting">
      <p id="dateNow"></p>
      <h1>Hola, <%- name %></h1>
    </div>

  </header>

  <main class="main-container">

    <section class="carousel-section">
      <div style="display: flex; justify-content: space-between; align-items: center;">
        <span class="section-label">Tus Rutinas</span>
        <span class="section-label" style="cursor: pointer; color: var(--accent);">Ver todas</span>
      </div>

      <div class="carousel-track" id="templateCarousel">

      </div>


      <a href="/create-template" class="workout-card"
        style="border-style: dashed; background: transparent; align-items: center; justify-content: center; opacity: 0.6; text-decoration: none;">
        <i class="ph ph-plus" style="font-size: 2rem; color: var(--text-tertiary);"></i>
        <span style="color: var(--text-tertiary); font-size: 0.9rem; font-weight: 500;">Nueva Rutina</span>
      </a>
      </div>
    </section>

    <nav class="secondary-nav">
      <ul class="nav-tabs">
        <li class="nav-tab-item active" onclick="switchTab(this, 'templates')">Mis Plantillas</li>
        <li class="nav-tab-item" onclick="switchTab(this, 'history')">Historial</li>
        <li class="nav-tab-item" onclick="switchTab(this, 'stats')">Estad√≠sticas</li>

      </ul>
    </nav>
    <div class="list-view" id="listView">
    </div>

  </main>

  <button class="fab-create">
    <i class="ph ph-plus"></i>
  </button>

  <nav class="bottom-nav">
    <div class="bottom-menu">
      <button class="menu-btn active">
        <i class="ph-fill ph-house"></i>
        <span>Inicio</span>
      </button>
      <button class="menu-btn">
        <i class="ph ph-magnifying-glass"></i>
        <span>Explorar</span>
      </button>
      <button class="menu-btn">
        <i class="ph ph-chart-bar"></i>
        <span>Progreso</span>
      </button>
      <button class="menu-btn">
        <i class="ph ph-gear"></i>
        <span>Ajustes</span>
      </button>
    </div>
  </nav>

  <script src="js/home.js"></script>